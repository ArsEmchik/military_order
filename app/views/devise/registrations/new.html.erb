<div class="panel panel-default" style="width: 40%; margin: 5px auto;">
  <div class="panel-body">

    <h2>Регистрация</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, label: 'Email', required: true, autofocus: true %>
          <%= f.input :password, label: 'Пароль', required: true %>
          <%= f.input :password_confirmation, label: 'Повторите пароль', required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Подтвердить"%>
        </div>
    <% end %>

    <hr>

    <%= render "devise/shared/links" %>

  </div>
</div>