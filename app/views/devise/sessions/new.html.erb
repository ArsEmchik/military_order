<div class="panel panel-default" style="width: 30%; margin: 5px auto">
  <div class="panel-body">

    <h2>Вход</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>


        <div class="form-inputs">
          <%= f.input :email, label: 'Email', :required => false, :autofocus => true %>
          <%= f.input :password, label: 'Пароль', :required => false %>
          <%= f.input :remember_me, label: 'Запомнить имя и пароль', :as => :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, 'Войти' %>
        </div>


    <% end %>

  </div>
</div>

